{
  "name": "impact-framework-vscode",
  "displayName": "impact-framework-vscode",
  "description": "GSF Impact Framework extension for VSCode",
  "icon": "static/if-logo.png",
  "version": "0.0.1",
  "type": "module",
  "publisher": "andrewwoosnam",
  "engines": {
    "vscode": "^1.88.0"
  },
  "categories": [
    "Snippets",
    "Other"
  ],
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "impact-framework-vscode.createManifest",
        "title": "Create Manifest (Impact Framework)"
      }
    ],
    "capabilities": {
      "hoverProvider": true
    },
    "languages": [
      {
        "id": "yaml",
        "extensions": [
          ".yaml",
          ".yml"
        ],
        "configuration": "./yaml-language-configuration.json"
      }
    ],
    "snippets": [
      {
        "language": "yaml",
        "path": "./static/manifest-snippets.json"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "ifPluginsSidebar",
          "title": "IF Plugins",
          "icon": "static/if-logo.svg"
        }
      ]
    },
    "views": {
      "ifPluginsSidebar": [
        {
          "type": "webview",
          "id": "impact-framework-vscode.pluginsView",
          "name": "IF Plugins"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "jest"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/andrew-woosnam/impact-framework-vscode.git"
  },
  "devDependencies": {
    "@types/jest": "^29.5.12",
    "@types/mocha": "^10.0.6",
    "@types/node": "18.x",
    "@types/vscode": "^1.88.0",
    "@typescript-eslint/eslint-plugin": "^7.7.1",
    "@typescript-eslint/parser": "^7.7.1",
    "@vscode/test-cli": "^0.0.8",
    "@vscode/test-electron": "^2.3.9",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.5",
    "typescript": "^5.4.5"
  },
  "dependencies": {
    "axios": "^1.7.2",
    "dotenv": "^16.4.5"
  }
}
